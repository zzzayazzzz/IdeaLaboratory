<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/project_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="5dp"
        android:scrollbars="vertical"
        tools:listitem="@layout/item_project"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/new_project_title" />

    <EditText
        android:id="@+id/new_project_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/new_project_button"
        android:gravity="center"
        android:hint="название нового проекта"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true" />

    <Button
        android:id="@+id/new_project_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Создать новый проект"
        android:layout_alignParentBottom="true" />
</RelativeLayout>